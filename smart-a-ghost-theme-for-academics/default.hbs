                    <use href="#clipboard"></use>
                </svg>
                <h3 class="serif">Subscribe, bitches!</h3>
                <p>Or you're gonna get cut 🔪</p>
                {{!-- subscribe_form partial --}}
                {{subscribe_form input_class="modal-input" autofocus="true"}}
                {{!-- subscribe_form partial --}}
            </div>
        </div>
    </aside>
    {{/if}}
