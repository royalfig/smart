    {{!-- Footer Module --}}
    <footer class="footer outer-container">
        <div class="inner-container ">
            <div class="grid-container">
                <div class="footer-section flex-col">
                    <p class="home-page-section-header serif">About</p>
                    <p>{{@site.title}}</p>

                    {{#if @site.description}}
                    <p>{{@site.description}}</p>
                    {{/if}}

                    <div class="footer-social flex-row">
                        {{#if @site.twitter}}
                        <a class="twitter" href="{{twitter_url}}" class="nav-item" aria-label="Twitter">
                            <svg>
                                <title>Twitter</title>
                                <use href="#twitter"></use>
                            </svg>
                        </a>
                        {{/if}}

                        {{#if @site.facebook}}
                        <a class="facebook" href="{{facebook_url}}" class="nav-item" aria-label="Facebook">
                            <svg>
                                <title>Facebook</title>
                                <use href="#facebook"></use>
                            </svg>
                        </a>
                        {{/if}}
                    </div>
                </div>

                {{#get "tags" include="count.posts" limit="5" order="count.posts"}}
                {{#if tags}}
                <div class="footer-section flex-col">
                    <p class="home-page-section-header serif">Topics</p>

                    {{#foreach tags}}
                    <a class="card-tag flex-row" href="{{url}}" aria-label="{{name}}">
                        <svg>
                            <use href="#hash"></use>
                        </svg>
                        <p>
                            {{name}}
                        </p>
                    </a>
                    {{/foreach}}
                </div>
                {{/if}}
                {{/get}}

                {{#get "posts" limit="5"}}
                <div class="footer-section footer-latest flex-col">
                    <p class="home-page-section-header serif">Latest</p>
                    {{#foreach posts}}
                    <p class="footer-date"><time
                            datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM DD, YYYY"}}</time></p>
                    <a href="{{url}}">{{title}}</a>
                    {{/foreach}}
                </div>
                {{/get}}
            </div>
        </div>

        <div class="published-by-ghost flex-row">
            <p>
                &copy; {{date format="YYYY"}} <a href="{{@site.url}}">{{@site.title}}</a> | Published by Ghost
            </p>
        </div>
    </footer>
