{
  "name": "smart",
  "version": "2.0.0",
  "description": "An elegant Ghost theme",
  "main": "index.js",
  "engines": {
    "ghost": ">=5.0.0"
  },
  "screenshots": {
    "desktop": "assets/screenshot-desktop.png",
    "mobile": "assets/screenshot-mobile.png"
  },
  "author": {
    "name": "Ryan Feigenbaum",
    "email": "ryan.feigenbaum@gmail.com",
    "url": "https://ryanfeigenbaum.com"
  },
  "scripts": {
    "dev": "NODE_ENV=development npx rollup -c",
    "watch": "npm run reload & NODE_ENV=development npx rollup -c -w",
    "build": "NODE_ENV=production npx rollup -c",
    "zip": "npm run build && node zip",
    "check": "gscan smart.zip -z",
    "css": "npx stylelint 'src/css/**/*.css' --fix",
    "reload": "cd utils && node reload"
  },
  "keywords": [
    "ghost-theme",
    "Ghost",
    "Theme"
  ],
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.20.5",
    "@babel/preset-env": "7.20.2",
    "@rollup/plugin-babel": "6.0.3",
    "@rollup/plugin-node-resolve": "15.0.1",
    "@rollup/plugin-replace": "5.0.1",
    "@rollup/plugin-terser": "^0.2.0",
    "adm-zip": "0.5.9",
    "autoprefixer": "10.4.13",
    "cssnano": "5.1.14",
    "eslint": "8.29.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.26.0",
    "gscan": "4.34.0",
    "livereload": "0.9.3",
    "minisearch": "6.0.0",
    "postcss": "8.4.19",
    "rollup": "3.5.1",
    "rollup-plugin-node-builtins": "2.1.2",
    "rollup-plugin-postcss": "4.0.2",
    "rollup-plugin-scss": "4.0.0",
    "sass": "1.56.1",
    "stylelint": "14.16.0",
    "stylelint-order": "5.0.0"
  },
  "dependencies": {
    "@tryghost/content-api": "^1.11.5",
    "js-search": "^2.0.0",
    "lazysizes": "^5.3.2",
    "medium-zoom": "^1.0.8",
    "postcss-import": "^15.0.1",
    "postcss-preset-env": "^7.8.3",
    "prismjs": "^1.29.0"
  },
  "config": {
    "posts_per_page": 15,
    "image_sizes": {
      "xxs": {
        "width": 100
      },
      "xs": {
        "width": 300
      },
      "s": {
        "width": 500
      },
      "m": {
        "width": 800
      },
      "l": {
        "width": 1000
      },
      "xl": {
        "width": 2000
      }
    },
    "custom": {
      "hero_title": {
        "type": "text",
        "group": "homepage"
      },
      "hero_description": {
        "type": "text",
        "group": "homepage"
      },
      "hero_image": {
        "type": "image",
        "group": "homepage"
      },
      "search_key": {
        "type": "text"
      },
      "search_url": {
        "type": "text"
      },
      "color_mode": {
        "type": "select",
        "options": [
          "light",
          "dark"
        ],
        "default": "dark"
      },
      "syntax_highlighting": {
        "type": "boolean",
        "default": false,
        "group": "post"
      },
      "social_media_1": {
        "type": "select",
        "options": [
          "behance",
          "discord",
          "dribble",
          "facebook",
          "github",
          "instagram",
          "linkedin",
          "mastodon",
          "patreon",
          "pinterest",
          "reddit",
          "slack",
          "snapchat",
          "telegram",
          "tumblr",
          "twitch",
          "twitch",
          "vimeo",
          "wechat",
          "youtube",
          "none"
        ],
        "default": "none"
      },
      "social_media_2": {
        "type": "select",
        "options": [
          "behance",
          "discord",
          "dribble",
          "facebook",
          "github",
          "instagram",
          "linkedin",
          "mastodon",
          "patreon",
          "pinterest",
          "reddit",
          "slack",
          "snapchat",
          "telegram",
          "tumblr",
          "twitch",
          "twitch",
          "vimeo",
          "wechat",
          "youtube",
          "none"
        ],
        "default": "none"
      },
      "social_media_1_url": {
        "type": "text"
      },
      "social_media_2_url": {
        "type": "text"
      }
    }
  },
  "type": "module"
}
