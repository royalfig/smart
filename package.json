{
  "name": "smart",
  "version": "1.3.0",
  "description": "An elegant Ghost theme",
  "main": "index.js",
  "engines": {
    "ghost": ">=4.0.0",
    "ghost-api": "v4"
  },
  "screenshots": {
    "desktop": "assets/screenshot-desktop.png",
    "mobile": "assets/screenshot-mobile.png"
  },
  "author": {
    "name": "Ryan Feigenbaum",
    "email": "ryan.feigenbaum@gmail.com",
    "url": "https://ryanfeigenbaum.com"
  },
  "scripts": {
    "dev": "NODE_ENV=development npx rollup -c",
    "watch": "NODE_ENV=development npx rollup -c -w",
    "build": "NODE_ENV=production npx rollup -c",
    "zip": "npm run build && node zip",
    "check": "gscan smart.zip -z"
  },
  "keywords": [
    "ghost-theme",
    "Ghost",
    "Theme"
  ],
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "adm-zip": "^0.5.9",
    "autoprefixer": "^10.2.5",
    "eslint": "^7.22.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "gscan": "^4.8.1",
    "postcss": "^8.2.10",
    "rollup": "^2.58.0",
    "rollup-plugin-scss": "^3.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.32.8",
    "stylelint": "^13.12.0",
    "stylelint-order": "^4.1.0"
  },
  "dependencies": {
    "@tryghost/content-api": "^1.5.1",
    "js-search": "^2.0.0",
    "lazysizes": "^5.3.0",
    "medium-zoom": "^1.0.6"
  },
  "config": {
    "posts_per_page": 10,
    "image_sizes": {
      "xxs": {
        "width": 30
      },
      "xs": {
        "width": 100
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 740
      },
      "l": {
        "width": 1024
      },
      "xl": {
        "width": 2000
      }
    },
    "custom": {
      "search": {
        "type": "text"
      },
      "disqus": {
        "type": "text",
        "group": "post"
      },
      "header": {
        "type": "select",
        "options": [
          "Small",
          "Large"
        ],
        "default": "Large",
        "group": "homepage"
      },
      "color_scheme": {
        "type": "select",
        "options": [
          "smart",
          "dracula",
          "gruvbox",
          "material",
          "nord"
        ],
        "default": "smart"
      },
      "memberships": {
        "type": "boolean",
        "default": true
      },
      "syntax_highlighting": {
        "type": "boolean",
        "default": false,
        "group": "post"
      },
      "custom_section": {
        "type": "text",
        "group": "homepage"
      }
    }
  }
}
