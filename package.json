{
  "name": "smart",
  "version": "1.3.0",
  "description": "An elegant Ghost theme",
  "main": "index.js",
  "engines": {
    "ghost": ">=4.0.0"
  },
  "screenshots": {
    "desktop": "assets/screenshot-desktop.png",
    "mobile": "assets/screenshot-mobile.png"
  },
  "author": {
    "name": "Ryan Feigenbaum",
    "email": "ryan.feigenbaum@gmail.com",
    "url": "https://ryanfeigenbaum.com"
  },
  "scripts": {
    "dev": "NODE_ENV=development npx rollup -c",
    "watch": "npm run reload &NODE_ENV=development npx rollup -c -w",
    "build": "NODE_ENV=production npx rollup -c",
    "zip": "npm run build && node zip",
    "check": "gscan smart.zip -z",
    "css": "npx stylelint 'src/css/**/*.css' --fix",
    "reload": "cd utils && node reload"
  },
  "keywords": [
    "ghost-theme",
    "Ghost",
    "Theme"
  ],
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.18.0",
    "@babel/preset-env": "^7.18.0",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "adm-zip": "^0.5.9",
    "autoprefixer": "^10.4.7",
    "cssnano": "^5.1.11",
    "eslint": "^8.16.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "gscan": "^4.30.0",
    "livereload": "^0.9.3",
    "minisearch": "^5.0.0-beta2",
    "postcss": "^8.4.14",
    "rollup": "^2.74.1",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-scss": "^3.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.52.1",
    "stylelint": "^14.8.4",
    "stylelint-order": "^5.0.0"
  },
  "dependencies": {
    "@tryghost/content-api": "^1.9.8",
    "js-search": "^2.0.0",
    "lazysizes": "^5.3.2",
    "medium-zoom": "^1.0.6",
    "postcss-import": "^14.1.0",
    "postcss-preset-env": "^7.7.0"
  },
  "config": {
    "posts_per_page": 15,
    "image_sizes": {
      "xxs": {
        "width": 30
      },
      "xs": {
        "width": 100
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 740
      },
      "l": {
        "width": 1024
      },
      "xl": {
        "width": 2000
      }
    },
    "custom": {
      "search": {
        "type": "text"
      },
      "color_mode": {
        "type": "select",
        "options": [
          "light",
          "dark"
        ],
        "default": "dark"
      },
      "disqus": {
        "type": "text",
        "group": "post"
      },
      "color_scheme": {
        "type": "select",
        "options": [
          "smart",
          "dracula",
          "gruvbox",
          "material",
          "nord"
        ],
        "default": "smart"
      },
      "syntax_highlighting": {
        "type": "boolean",
        "default": false,
        "group": "post"
      },
      "social_media_1": {
        "type": "select",
        "options": [
          "linkedin",
          "instagram",
          "twitch",
          "youtube"
        ],
        "default": ""
      }
    }
  }
}
