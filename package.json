{
  "name": "smart",
  "version": "1.3.0",
  "description": "An elegant Ghost theme",
  "main": "index.js",
  "engines": {
    "ghost": ">=4.0.0"
  },
  "screenshots": {
    "desktop": "assets/screenshot-desktop.png",
    "mobile": "assets/screenshot-mobile.png"
  },
  "author": {
    "name": "Ryan Feigenbaum",
    "email": "ryan.feigenbaum@gmail.com",
    "url": "https://ryanfeigenbaum.com"
  },
  "scripts": {
    "dev": "NODE_ENV=development npx rollup -c",
    "watch": "npm run reload &NODE_ENV=development npx rollup -c -w",
    "build": "NODE_ENV=production npx rollup -c",
    "zip": "npm run build && node zip",
    "check": "gscan smart.zip -z",
    "css": "npx stylelint 'src/css/**/*.css' --fix",
    "reload": "cd utils && node reload"
  },
  "keywords": [
    "ghost-theme",
    "Ghost",
    "Theme"
  ],
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.18.10",
    "@babel/preset-env": "7.18.10",
    "@rollup/plugin-babel": "5.3.1",
    "@rollup/plugin-node-resolve": "13.3.0",
    "@rollup/plugin-replace": "4.0.0",
    "adm-zip": "0.5.9",
    "autoprefixer": "10.4.7",
    "cssnano": "5.1.11",
    "eslint": "8.17.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.26.0",
    "gscan": "4.31.2",
    "livereload": "0.9.3",
    "minisearch": "5.0.0-beta2",
    "postcss": "8.4.14",
    "rollup": "2.75.6",
    "rollup-plugin-node-builtins": "2.1.2",
    "rollup-plugin-postcss": "4.0.2",
    "rollup-plugin-scss": "3.0.0",
    "rollup-plugin-terser": "7.0.2",
    "sass": "1.52.3",
    "stylelint": "14.9.1",
    "stylelint-order": "5.0.0"
  },
  "dependencies": {
    "@tryghost/content-api": "^1.9.8",
    "js-search": "^2.0.0",
    "lazysizes": "^5.3.2",
    "medium-zoom": "^1.0.6",
    "postcss-import": "^14.1.0",
    "postcss-preset-env": "^7.7.0",
    "prismjs": "^1.28.0"
  },
  "config": {
    "posts_per_page": 15,
    "image_sizes": {
      "xxs": {
        "width": 100
      },
      "xs": {
        "width": 300
      },
      "s": {
        "width": 500
      },
      "m": {
        "width": 800
      },
      "l": {
        "width": 1000
      },
      "xl": {
        "width": 2000
      }
    },
    "custom": {
      "hero_title": {
        "type": "text",
        "group": "homepage"
      },
      "hero_description": {
        "type": "text",
        "group": "homepage"
      },
      "hero_image": {
        "type": "image",
        "group": "homepage"
      },
      "search_key": {
        "type": "text"
      },
      "search_url": {
        "type": "text"
      },
      "color_mode": {
        "type": "select",
        "options": [
          "light",
          "dark"
        ],
        "default": "dark"
      },
      "syntax_highlighting": {
        "type": "boolean",
        "default": false,
        "group": "post"
      },
      "social_media_1": {
        "type": "select",
        "options": [
          "behance",
          "discord",
          "dribble",
          "facebook",
          "github",
          "instagram",
          "linkedin",
          "mastodon",
          "patreon",
          "pinterest",
          "reddit",
          "slack",
          "snapchat",
          "telegram",
          "tumblr",
          "twitch",
          "twitch",
          "vimeo",
          "wechat",
          "youtube"
        ],
        "default": ""
      },
      "social_media_2": {
        "type": "select",
        "options": [
          "behance",
          "discord",
          "dribble",
          "facebook",
          "github",
          "instagram",
          "linkedin",
          "mastodon",
          "patreon",
          "pinterest",
          "reddit",
          "slack",
          "snapchat",
          "telegram",
          "tumblr",
          "twitch",
          "twitch",
          "vimeo",
          "wechat",
          "youtube"
        ],
        "default": ""
      },
      "social_media_1_url": {
        "type": "text"
      },
      "social_media_2_url": {
        "type": "text"
      }
    }
  }
}
