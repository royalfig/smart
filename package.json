{
  "name": "smart",
  "version": "2.6.1",
  "description": "An elegant Ghost theme",
  "main": "index.js",
  "engines": {
    "ghost": ">=5.0.0"
  },
  "author": {
    "name": "Ryan Feigenbaum",
    "email": "ryan.feigenbaum@gmail.com",
    "url": "https://ryanfeigenbaum.com"
  },
  "scripts": {
    "dev": "rollup -c --environment BUILD:development -w",
    "build": "rollup -c --environment BUILD:production",
    "preversion": "npm run build",
    "version": "git add .",
    "postversion": "git push && git push --tags",
    "zip": "npm run build && bestzip $npm_package_name.zip assets/* partials/* *.hbs package.json",
    "test": "npx gscan .",
    "css": "npx stylelint 'assets/css/**/*.css' --fix"
  },
  "keywords": [
    "ghost-theme",
    "Ghost",
    "Theme"
  ],
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/preset-env": "^7.20.2",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^25.0.3",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-terser": "^0.4.0",
    "bestzip": "^2.2.1",
    "eslint": "8.45.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-import": "2.27.5",
    "postcss-import": "^15.1.0",
    "postcss-preset-env": "^9.0.0",
    "rollup": "^3.18.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-postcss": "^4.0.2",
    "stylelint": "15.10.2",
    "stylelint-config-recess-order": "^4.0.0",
    "stylelint-config-standard": "^34.0.0"
  },
  "dependencies": {
    "medium-zoom": "^1.0.8",
    "prismjs": "^1.29.0"
  },
  "config": {
    "posts_per_page": 15,
    "image_sizes": {
      "48": {
        "width": 48
      },
      "80": {
        "width": 80
      },
      "160": {
        "width": 160
      },
      "240": {
        "width": 240
      },
      "528": {
        "width": 528
      },
      "800": {
        "width": 800
      },
      "1200": {
        "width": 1200
      },
      "1600": {
        "width": 1600
      },
      "1920": {
        "width": 1920
      },
      "2000": {
        "width": 2000
      }
    },
    "custom": {
      "hero_description": {
        "type": "text",
        "group": "homepage"
      },
      "hero_image": {
        "type": "image",
        "group": "homepage"
      },
      "color_mode": {
        "type": "select",
        "options": [
          "light",
          "dark"
        ],
        "default": "dark"
      },
      "syntax_highlighting": {
        "type": "boolean",
        "default": false,
        "group": "post"
      },
      "social_media_1": {
        "type": "select",
        "options": [
          "behance",
          "discord",
          "dribble",
          "facebook",
          "github",
          "instagram",
          "linkedin",
          "mastodon",
          "patreon",
          "pinterest",
          "reddit",
          "slack",
          "snapchat",
          "substack",
          "telegram",
          "tumblr",
          "twitch",
          "twitter",
          "vimeo",
          "wechat",
          "youtube",
          "none"
        ],
        "default": "none"
      },
      "social_media_2": {
        "type": "select",
        "options": [
          "behance",
          "discord",
          "dribble",
          "facebook",
          "github",
          "instagram",
          "linkedin",
          "mastodon",
          "patreon",
          "pinterest",
          "reddit",
          "slack",
          "snapchat",
          "substack",
          "telegram",
          "tumblr",
          "twitch",
          "twitter",
          "vimeo",
          "wechat",
          "youtube",
          "none"
        ],
        "default": "none"
      },
      "social_media_3": {
        "type": "select",
        "options": [
          "behance",
          "discord",
          "dribble",
          "facebook",
          "github",
          "instagram",
          "linkedin",
          "mastodon",
          "patreon",
          "pinterest",
          "reddit",
          "slack",
          "snapchat",
          "substack",
          "telegram",
          "tumblr",
          "twitch",
          "twitter",
          "vimeo",
          "wechat",
          "youtube",
          "none"
        ],
        "default": "none"
      },
      "social_media_4": {
        "type": "select",
        "options": [
          "behance",
          "discord",
          "dribble",
          "facebook",
          "github",
          "instagram",
          "linkedin",
          "mastodon",
          "patreon",
          "pinterest",
          "reddit",
          "slack",
          "snapchat",
          "substack",
          "telegram",
          "tumblr",
          "twitch",
          "twitter",
          "vimeo",
          "wechat",
          "youtube",
          "none"
        ],
        "default": "none"
      },
      "social_media_1_url": {
        "type": "text"
      },
      "social_media_2_url": {
        "type": "text"
      },
      "social_media_3_url": {
        "type": "text"
      },
      "social_media_4_url": {
        "type": "text"
      },
      "show_table_of_contents": {
        "type": "boolean",
        "default": false,
        "group": "post"
      }
    }
  },
  "type": "module"
}
